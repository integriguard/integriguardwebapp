---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import ByNumber from "./ByNumber.astro";
import Title from "../shared/Title.astro";
import Carousel from "../elements/HeroCarousel.jsx";
---

<section class="relative pt-24 lg:pt-36">
    <Container className={"flex flex-col lg:flex-row gap-10 lg:gap-12"}>
        <div class="text-center max-w-3xl mx-auto space-y-4">
            <Title>
                Healthcare Outsourcing Services
            </Title>
            <div class="text-center text-white">
                <Paragraph className="mb-8 max-w-3xl mx-auto text-center text-white">
                    By integrating your operations to us, we can help your company keep up with growing responsibilities and tasks, reduce your labor costs, improve team efficiency, focus on what's important, increase productivity and focus on delivering quality care to your residents.
                </Paragraph>    
            </div>
            <div class="py-2">
                <Carousel client:load/>
            </div>
            
        </div>
    </Container>
    

    <!-- <ByNumber/> -->
</section>